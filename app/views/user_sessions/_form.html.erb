<div class='row'>
  <div class='col-md-5'>
    <%= form_for :user_session,
      class: 'form-horizontal',
      url: :user_sessions do |f| %>
      <div class='form-group'>
        <%= f.text_field :login,
          placeholder: 'login name',
          class: 'form-control' %>
      </div>

      <div class='form-group'>
        <%= f.password_field :password,
          placeholder: 'password',
          class: 'form-control' %>
      </div>

      <%= f.submit 'Login', class: 'btn' %>
    <% end %>
  </div>
</div>

<br>

<div class='col-md-5'>
  <%= link_to new_user_path do %>
    <%= fa_icon 'plus' %>
    Create an Account
  <% end %>
</div>
