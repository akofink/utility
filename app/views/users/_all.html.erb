<div class='panel panel-default'>
  <div class='panel-heading'>
    <h3 class='panel-title'>
      <%= link_to 'Users', User %>
      <%= link_to new_user_path, class: 'pull-right' do %>
        <%= fa_icon 'plus' %>
      <% end %>
    </h3>
  </div>

  <ul class='list-group'>
    <% users.each do |user| %>
      <div class='list-group-item'>
        <%= link_to user target='_blank'%>

        <span class='pull-right'>
          <%= link_to edit_user_path(user) do %>
            <%= fa_icon 'edit' %>
          <% end %>
          <%= link_to user, method: 'delete', confirm: 'Delete user?' do %>
            <%= fa_icon 'times' %>
          <% end %>
        </span>
      </div>
    <% end %>
  </ul>
</div>
